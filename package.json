{
  "name": "@fedify/hollo",
  "description": "Federated single-user microblogging software",
  "version": "0.7.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prod": "pnpm run migrate && tsx --env-file-if-exists=.env --dns-result-order=ipv6first bin/server.ts",
    "dev": "pnpm run migrate && tsx watch --env-file-if-exists=.env --dns-result-order=ipv6first bin/server.ts",
    "list:routes": "tsx --env-file-if-exists=.env bin/routes.ts",
    "test": "pnpm run migrate:test && vitest",
    "test:ci": "vitest",
    "check": "tsc && biome check .",
    "check:ci": "tsc && biome ci --reporter=github .",
    "check:coverage": "pnpm run migrate:test && vitest --coverage",
    "migrate": "drizzle-kit migrate",
    "migrate:test": "dotenvx run -f .env.test -- drizzle-kit migrate",
    "migrate:generate": "drizzle-kit generate",
    "rebuild-timelines": "tsx --env-file-if-exists=.env scripts/rebuild-timelines.ts"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.916.0",
    "@fedify/fedify": "~1.8.12",
    "@fedify/markdown-it-hashtag": "~0.3.0",
    "@fedify/markdown-it-mention": "~0.3.0",
    "@fedify/postgres": "~1.8.12",
    "@hexagon/base64": "^2.0.4",
    "@hono/node-server": "^1.19.0",
    "@hono/zod-validator": "^0.7.4",
    "@js-temporal/polyfill": "^0.5.0",
    "@logtape/file": "~1.1.0",
    "@logtape/logtape": "~1.1.2",
    "@logtape/sentry": "^1.1.0",
    "@sentry/core": "^10.21.0",
    "@sentry/node": "^10.21.0",
    "@shikijs/markdown-it": "^3.12.0",
    "@supercharge/promise-pool": "^3.2.0",
    "argon2": "^0.44.0",
    "cheerio": "^1.1.2",
    "cssfilter": "^0.0.11",
    "csv-writer-portable": "^1.7.6",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "es-toolkit": "^1.40.0",
    "fluent-ffmpeg": "^2.1.3",
    "flydrive": "^1.3.0",
    "hono": "^4.10.3",
    "iso-639-1": "^3.1.5",
    "markdown-it": "^14.1.0",
    "markdown-it-replace-link": "^1.2.2",
    "mime": "^4.1.0",
    "neat-csv": "^7.0.0",
    "open-graph-scraper": "^6.10.0",
    "otpauth": "^9.4.1",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "semver": "^7.7.3",
    "sharp": "^0.34.3",
    "ssrfcheck": "^1.1.1",
    "tsx": "^4.20.5",
    "uuidv7-js": "^1.1.4",
    "x-forwarded-fetch": "^0.2.0",
    "xss": "^1.0.15",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@dotenvx/dotenvx": "^1.48.4",
    "@reporters/github": "^1.11.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.9.1",
    "@types/qrcode": "^1.5.6",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "3.1.4",
    "dotenv": "^17.2.3",
    "linkedom": "^0.18.12",
    "timekeeper": "^2.3.1",
    "typescript": "^5.9.2",
    "vitest": "^3.1.4"
